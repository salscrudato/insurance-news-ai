{
  "name": "insurance-news-ai",
  "version": "0.1.0",
  "private": true,
  "description": "Mobile-first PWA for insurance news with AI signals",
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "dev:web": "pnpm -F @insurance-news-ai/web dev",
    "dev:functions": "pnpm -F @insurance-news-ai/functions dev",
    "build": "pnpm -r run build",
    "build:web": "pnpm -F @insurance-news-ai/web build",
    "build:functions": "pnpm -F @insurance-news-ai/functions build",
    "lint": "pnpm -r run lint",
    "type-check": "pnpm -r run type-check",
    "test": "pnpm -r run test"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}

